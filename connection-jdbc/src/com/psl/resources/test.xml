<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="bds" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName"
			value="oracle.jdbc.driver.OracleDriver"></property>
		<property name="url"
			value="jdbc:oracle:thin:@localhost:1521/XEPDB1"></property>
		<property name="username" value="sys as sysdba"></property>
		<property name="password" value="123"></property>
		<property name="maxActive" value="15"></property>
		<property name="maxIdle" value="5"></property>
		<property name="maxWait" value="5000"></property>
	</bean>

	<bean id="dao" class="com.psl.dao.StudentDaoImplJDBC">
		<property name="ds" ref="bds"></property>
	</bean>

	<bean id="bo" class="com.psl.business.StudentBoImpl">
		<property name="studentDao" ref="dao"></property>
	</bean>

</beans>